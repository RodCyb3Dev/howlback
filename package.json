{
  "name": "server",
  "version": "1.0.0",
  "description": "MERN App MongoDB X-press React Nodejs Redux SendGrid for mailer Stripe for payments its a full-stack",
  "main": "index.js",
  "engines": {
    "node": "12.19.0",
    "yarn": "1.22.5"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "cd client && yarn run start",
    "dev": "concurrently \"yarn run server\" \"yarn run client\" \"yarn run webhook\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd client && yarn install && yarn run build",
    "webhook": "./sendgrid_webhook.sh"
  },
  "author": "Rodney",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-session": "^1.4.0",
    "express": "^4.16.3",
    "localtunnel": "^1.9.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.1.2",
    "node-forge": "^0.10.0",
    "nodemon": "^2.0.6",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "path-parser": "^4.1.0",
    "react-alert": "^4.0.4",
    "react-transition-group": "^2.3.1",
    "sendgrid": "^5.2.3",
    "stripe": "^6.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
